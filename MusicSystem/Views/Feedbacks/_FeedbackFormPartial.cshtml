@model AddFeedbackModel

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="text-center">@ViewBag.Title</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Score"></label>
                    <select asp-for="Score" class="form-control">
                        @for (int i = 1; i < 11; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Suggestion"></label>
                    <input asp-for="Suggestion" class="form-control" placeholder="A short suggestion">
                    <span asp-validation-for="Suggestion" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
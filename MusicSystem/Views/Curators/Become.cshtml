@model BecomeCuratorFormModel

@{
    ViewBag.Title = "Become a Curator";
}

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="text-center">@ViewBag.Title</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Nickname"></label>
                    <input asp-for="Nickname" class="form-control" placeholder="Your nickname here">
                    <span asp-validation-for="Nickname" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Your email here">
                    <span asp-validation-for="Email" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
